<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>文章列表</title>
    <link rel="stylesheet" href="/stylesheets/base.css" media="screen" title="no title">
    <link rel="stylesheet" href="/stylesheets/list.css" media="screen" title="no title">
  </head>
  <body>
    <!--导航栏信息 -->
    <% include _nav.ejs %>
    <div id="main">
    <!-- <div id="more">点击加载更多</div> -->
    <% list.forEach(function(item) {
    %> <div class="article_container">
      <h2><a href="/article?article_id=<%= item.article_id %>"><%= item.article_title %></a></h2>
      <div>点赞评论信息</div>
      <div class="article_content">
        <%= item.article_content.substring(0,120) %>
      </div>
    </div>
    <% })%>
    <div id="pageSelect">
      <% if (hasPrev) { %>
            <a href="/list?type=<%= type %>&page=<%= parseInt(page, 10)-1 %>" class="changePage">上一页</a>
      <% } %>

      <% if (hasNext) { %>
      <a href="/list?type=<%= type %>&page=<%= parseInt(page, 10)+1 %>" class="changePage">下一页</a>
      <% } %>
    </div>
  </div>
    <!--右边部分 -->
    <% include _right.ejs %>
    <div id="none" style="display:none"></div>
    <!-- footer部分 -->
    <% include _footer.ejs %>
     <script src="./javascripts/right.js"></script>
  </body>
</html>
